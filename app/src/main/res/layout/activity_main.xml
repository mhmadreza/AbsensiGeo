<?xml version="1.0" encoding="utf-8"?>
<com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rippleBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    app:rb_color="@android:color/white"
    app:rb_duration="3000"
    app:rb_radius="32dp"
    app:rb_rippleAmount="6"
    app:rb_scale="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewCheckIn"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-medium"
        android:text="Absensi"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCheckIn"
        android:layout_centerHorizontal="true"
        android:text="Scanning..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/tvCheckInSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_checkin_success"
        android:paddingStart="68dp"
        android:paddingTop="14dp"
        android:paddingEnd="68dp"
        android:paddingBottom="14dp"
        android:text="Check-in success"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:visibility="gone" />

</com.skyfishjy.library.RippleBackground>